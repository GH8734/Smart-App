<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.teamchile.smartapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ie.teamchile.smartapp.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuickMenuActivity"
            android:label="@string/title_activity_quick_menu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AppointmentTypeSpinnerActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_appointment_type_spinner" />
        <activity
            android:name=".CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectTimeActivity"
            android:label="@string/title_activity_select_time"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ServiceUserActivity"
            android:label="@string/title_activity_service_user"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ServiceUserSearchActivity"
            android:label="@string/title_activity_service_user_search"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ConfirmAppointmentActivity"
            android:label="@string/title_activity_confirm_appointment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AppointmentCalendarActivity"
            android:label="@string/title_activity_appointment_calendar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ContactDetailsActivity"
            android:label="@string/title_activity_contact_details"
            android:screenOrientation="portrait" />
    </application>
</manifest>