<?xml version="1.0" encoding="utf-8"?>
<manifest package="ie.teamchile.smartapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_MEDIA_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CLEAR_APP_CACHE"/>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".SmartApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name="net.hockeyapp.android.UpdateActivity" />

        <activity
            android:name=".activities.SpalshScreen.SplashScreenActivity"
            android:noHistory="true"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.QuickMenu.QuickMenuActivity"
            android:launchMode="singleTask"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".activities.AppointmentCalendar.AppointmentCalendarActivity"
            android:launchMode="singleTask"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".activities.AppointmentTypeSpinner.AppointmentTypeSpinnerActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".activities.ClinicTimeRecord.ClinicTimeRecordActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".activities.CreateAppointment.CreateAppointmentActivity"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".activities.ParityDetails.ParityDetailsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".activities.Login.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".activities.ServiceUser.ServiceUserActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".activities.ServiceUserSearch.ServiceUserSearchActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".activities.TodayAppointment.TodayAppointmentActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".activities.MidwiferyLog.MidwiferyLogActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".activities.HomeVisitAppointment.HomeVisitAppointmentActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".activities.About.AboutActivity"
            android:noHistory="true"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
    </application>
</manifest>
