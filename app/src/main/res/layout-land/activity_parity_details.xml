<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/parity_baby_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_Xsmall"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/parity_dob"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_Xsmall"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="@string/parity_hospital_number"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_Xsmall"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/parity_gestation"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_Xsmall"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/parity_gender"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_Xsmall"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/parity_weight"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_Xsmall"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/parity_mode_of_birth"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_Xsmall"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/parity_birth_outcome"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_Xsmall"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/parity_hearing"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_Xsmall"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/parity_nbst"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_Xsmall"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/parity_vit_k"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_Xsmall"
                android:textStyle="bold"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_parity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </LinearLayout>

</HorizontalScrollView>
