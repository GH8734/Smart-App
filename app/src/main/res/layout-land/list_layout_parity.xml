<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_parity_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_parity_dob"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_parity_hospital_number"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_parity_gestation"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_parity_gender"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_parity_weight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_parity_birth_mode"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_parity_outcome"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_parity_hearing"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_parity_nbst"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_parity_vit_k"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_small" />

</LinearLayout>