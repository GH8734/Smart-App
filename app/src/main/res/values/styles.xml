<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">@color/clinical_blue</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>

    <style name="spinner_style" >
        <item name="android:background">@drawable/spinner_bg</item>
    </style>

   <style name="CallToActionButton" >
       <item name="colorButtonNormal">@color/action_button</item>
       <item name="android:textColor">@color/white</item>
       <item name="android:textSize">@dimen/text_medium</item>
       <item name="android:paddingTop">@dimen/padding_small</item>
       <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="DisableCTA" >
        <item name="colorButtonNormal">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="SecondaryButton">
        <item name="colorButtonNormal">@color/teal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="NotToAction">
        <item name="colorButtonNormal">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="SubSection">
        <item name="android:background">@color/very_light_grey</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:paddingTop">@dimen/padding_Xsmall</item>
        <item name="android:paddingBottom">@dimen/padding_Xsmall</item>
    </style>
</resources>