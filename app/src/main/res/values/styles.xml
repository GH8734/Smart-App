<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>

    <style name="spinner_style" >
        <item name="android:background">@drawable/spinner_bg</item>
    </style>

   <style name="CallToActionButton" parent="AppTheme">
       <item name="colorButtonNormal">@color/action_button</item>
       <item name="android:textColor">@color/white</item>
       <item name="android:textSize">@dimen/text_medium</item>
       <item name="android:paddingTop">@dimen/padding_small</item>
       <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="SecondaryButton" parent="AppTheme">
        <item name="colorButtonNormal">@color/very_light_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TertiaryButton" parent="AppTheme">
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textColor">@color/green</item>
    </style>
</resources>