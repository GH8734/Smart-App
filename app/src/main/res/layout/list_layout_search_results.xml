<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_results_hospital_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="H12345678"
        android:textSize="@dimen/text_x_x_small"
        android:textColor="@color/light_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/tv_results_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nore Saturn"
            android:textSize="@dimen/text_Xsmall"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/tv_results_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="12/03/1963"
            android:textSize="@dimen/text_Xsmall"
            android:layout_weight="0.5"/>

    </LinearLayout>

</LinearLayout>