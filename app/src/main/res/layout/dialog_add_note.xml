<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clinical_blue"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_small"
            android:paddingLeft="-48dp"
            android:text="SMART"
            android:textColor="@color/white"
            android:textSize="@dimen/text_Xsmall"/>

        <ImageView
            android:id="@+id/iv_exit_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/padding_small"
            android:src="@drawable/ic_close"/>

        <TextView
            android:id="@+id/tv_note_char_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_exit_dialog"
            android:layout_alignParentRight="true"
            android:text="140/140"
            android:paddingRight="@dimen/padding_small"
            android:textColorHint="@color/light_grey"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_midwifery_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_note_hint"
        android:textColor="@color/black"
        android:textColorHint="@color/light_grey"/>

    <Button
        android:id="@+id/btn_save_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_note"
        android:theme="@style/CallToActionButton"/>

</LinearLayout>