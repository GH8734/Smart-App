<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ie.teamchile.smartapp.activities.ClinicTimeRecordActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_Xsmall"
            android:text="@string/clinics_not_started"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/text_medium"
            android:textStyle="italic"/>

        <ListView
            android:id="@+id/lv_clinics_not_started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@color/teal"/>

        <Button
            android:id="@+id/btn_start_clinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_clinic"
            android:theme="@style/CallToActionButton"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_Xsmall"
            android:text="@string/clinics_started"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/text_medium"
            android:textStyle="italic"/>

        <ListView
            android:id="@+id/lv_clinics_started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@color/teal"/>

        <Button
            android:id="@+id/btn_stop_clinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stop_clinic"
            android:theme="@style/CallToActionButton"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_Xsmall"
            android:text="@string/clinics_stopped"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/text_medium"
            android:textStyle="italic"/>

        <ListView
            android:id="@+id/lv_clinics_stopped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_reset_clinic_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_record"
            android:textSize="@dimen/text_medium"
            android:theme="@style/WarningCta"/>

</LinearLayout>
