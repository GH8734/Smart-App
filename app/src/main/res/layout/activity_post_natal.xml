<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/mother_info"
                android:textSize="@dimen/text_small"
                android:theme="@style/SubSection"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.8dp"
                android:background="@drawable/border"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/birth_mode"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/text_natal_field"/>

                <TextView
                    android:id="@+id/tv_post_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/text_natal_data"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.8dp"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/perineum"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/text_natal_field"/>

                <TextView
                    android:id="@+id/tv_post_perineum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/text_natal_data"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_post_anti_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.8dp"
                android:background="@drawable/border">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/anti_d"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/text_natal_field"/>

                    <TextView
                        android:id="@+id/tv_post_anti_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_anti_d_history_icon"
                        android:gravity="end"
                        android:paddingRight="@dimen/padding_Xsmall"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/text_natal_data"/>

                    <ImageView
                        android:id="@+id/iv_anti_d_history_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:gravity="end"
                        android:src="@drawable/ic_file_document" />

                </RelativeLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tr_feeding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.8dp"
                android:background="@drawable/border">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/baby_feeding"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/text_natal_field"/>

                    <TextView
                        android:id="@+id/tv_post_feeding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingRight="@dimen/padding_Xsmall"
                        android:layout_toLeftOf="@+id/iv_feeding_history_icon"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/text_natal_data"/>

                    <ImageView
                        android:id="@+id/iv_feeding_history_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:gravity="end"
                        android:src="@drawable/ic_file_document"/>
                </RelativeLayout>

            </TableRow>

            <TableRow
                android:id="@+id/tr_midwife_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.8dp"
                android:background="@drawable/border">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="@string/midwifery_log"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/text_natal_field"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_post_midwives_notes"
                        android:paddingRight="@dimen/padding_Xsmall"
                        android:text="View"
                        android:textSize="@dimen/text_natal_field"/>

                    <ImageView
                        android:id="@+id/iv_post_midwives_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:gravity="end"
                        android:src="@drawable/ic_file_document"/>

                </RelativeLayout>
            </TableRow>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/baby_info"
                android:textSize="@dimen/text_small"
                android:theme="@style/SubSection"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.8dp"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_date"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/text_natal_field"/>

                <TextView
                    android:id="@+id/tv_post_delivery_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/text_natal_data"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.8dp"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_time"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/text_natal_field"/>

                <TextView
                    android:id="@+id/tv_post_delivery_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/text_natal_data"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="@dimen/padding_natal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/days_sinceBirth"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/text_natal_field"/>

                <TextView
                    android:id="@+id/tv_post_days_since_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/text_natal_data"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.8dp"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex_of_baby"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/text_natal_field"/>

                <TextView
                    android:id="@+id/tv_post_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/text_natal_data"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.8dp"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/birth_weight"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/text_natal_field"/>

                <TextView
                    android:id="@+id/tv_post_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/text_natal_data"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_vit_k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.8dp"
                android:background="@drawable/border">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/vit_k"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/text_natal_field"/>

                    <TextView
                        android:id="@+id/tv_post_vit_k"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_vit_k_history_icon"
                        android:gravity="end"
                        android:paddingRight="@dimen/padding_Xsmall"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/text_natal_data"/>

                    <ImageView
                        android:id="@+id/iv_vit_k_history_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:gravity="end"
                        android:src="@drawable/ic_file_document"/>

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:id="@+id/tr_hearing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.8dp"
                android:background="@drawable/border">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/baby_hearing"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/text_natal_field"/>

                    <TextView
                        android:id="@+id/tv_post_hearing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_hearing_history_icon"
                        android:gravity="end"
                        android:paddingRight="@dimen/padding_Xsmall"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/text_natal_data"/>

                    <ImageView
                        android:id="@+id/iv_hearing_history_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:gravity="end"
                        android:src="@drawable/ic_file_document"/>

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:id="@+id/tr_nbst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.8dp"
                android:background="@drawable/border">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/nbst"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/text_natal_field"/>

                    <TextView
                        android:id="@+id/tv_post_nbst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_nbst_history_icon"
                        android:gravity="end"
                        android:paddingRight="@dimen/padding_Xsmall"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/text_natal_data"/>

                    <ImageView
                        android:id="@+id/iv_nbst_history_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:gravity="end"
                        android:src="@drawable/ic_file_document"/>

                </RelativeLayout>
            </TableRow>
        </LinearLayout>
    </LinearLayout>
</ScrollView>