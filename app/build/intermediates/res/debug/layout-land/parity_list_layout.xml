<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="3dp"
    android:paddingRight="3dp" >

    <TextView
        android:id="@+id/dob_parity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_Xsmall" />

    <TextView
        android:id="@+id/gestation_parity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_Xsmall" />

    <TextView
        android:id="@+id/gender_parity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_Xsmall" />

    <TextView
        android:id="@+id/weight_parity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_Xsmall" />

    <TextView
        android:id="@+id/mode_of_birth_parity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_Xsmall" />

    <TextView
        android:id="@+id/birth_outcome_parity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/text_Xsmall" />

</LinearLayout><!-- From: file:/home/user/Android_Projects/AndroidStudioProjects/SmartApp/app/src/main/res/layout-land/parity_list_layout.xml -->