<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6.0"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/one_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="@string/one_select_time"
        android:textSize="@dimen/text_large" />

    <Button
        android:id="@+id/two_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="@string/two_select_time"
        android:textSize="@dimen/text_large" />

    <Button
        android:id="@+id/three_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="@string/three_select_time"
        android:textSize="@dimen/text_large" />

    <Button
        android:id="@+id/four_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="@string/four_select_time"
        android:textSize="@dimen/text_large" />

    <Button
        android:id="@+id/five_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="@string/five_select_time"
        android:textSize="@dimen/text_large" />

    <Button
        android:id="@+id/six_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="@string/six_select_time"
        android:textSize="@dimen/text_large" />

</LinearLayout>